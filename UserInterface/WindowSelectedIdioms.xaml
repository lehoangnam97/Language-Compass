<Window x:Class="UserInterface.WindowSelectedIdioms"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserInterface"
        mc:Ignorable="d"
        WindowState="Normal"
        
        WindowStartupLocation="CenterScreen"
        Title="" Height="300" Width="300" Topmost="True">
    <Grid>
        <DockPanel >
            <TextBox DockPanel.Dock="Top"  FontSize="18" Text="Press the word need to translate" IsReadOnly="True" VerticalAlignment="Center" TextAlignment="Center" Foreground="White" FontWeight="ExtraBold" Background="#16a085" Height="30" ></TextBox>
            <ListBox x:Name="lboxWords" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="17">
            </ListBox>
        </DockPanel>
    </Grid>
</Window>
